<%= render 'shared/navigation' %>
<h1><%= t('members.listing', :scope => [:views]) %></h1>

<table class="members">
  <col class="contents" span="6" />
  <col class="profile" />
  <col class="commands" span="3" />
  <tr>
    <th><%= t(:name, :default => "Name", :scope => [:activerecord, :attributes, :member]) %></th>
    <th><%= t(:address, :default => "Address", :scope => [:activerecord, :attributes, :member]) %></th>
    <th><%= t(:email, :default => "Email", :scope => [:activerecord, :attributes, :member]) %></th>
    <th><%= t(:twitter_id, :default => "Twitter ID", :scope => [:activerecord, :attributes, :member]) %></th>
    <th><%= t(:blog_url, :default => "Blog URL", :scope => [:activerecord, :attributes, :member]) %></th>
    <th><%= t(:birthday, :default => "Birthday", :scope => [:activerecord, :attributes, :member]) %></th>
    <th><%= t(:profile, :default => "Profile", :scope => [:activerecord, :attributes, :member]) %></th>
    <th colspan="3"><%= t(:commands, :scope => [:views, :global]) %></th>
  </tr>

<% @members.each do |member| %>
  <tr class="member">
    <td><%= member.name %></td>
    <td><%= member.address %></td>
    <td><%= member.email %></td>
    <td><%= member.twitter_id %></td>
    <td><%= member.blog_url %></td>
    <td><%= member.birthday.strftime('%Y/%m/%d') %></td>
    <td><%= member.profile %></td>
    <td><%= link_to t(:show, :default => 'Show', :scope => [:views, :global]), member %></td>
    <td><%= link_to t(:edit, :default => 'Edit', :scope => [:views, :global]), edit_member_path(member) %></td>
    <td><%= link_to t(:destroy, :default => 'Destroy', :scope => [:views, :global]), member,
                    :confirm => t(:sure?, :default => 'Are you sure?', :scope => [:views, :global]),
                    :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('members.new', :default => 'New Member', :scope => [:views]), new_member_path %> |
<%= link_to t('events.listing', :scope => [:views]), events_path %>
