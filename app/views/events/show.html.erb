<h1><%= t('events.show', :scope => [:views]) %></h1>
<p id="notice"><%= notice %></p>

<table class="events">
  <col />
  <col class="contents">
  <tr>
    <th><%= t('event.name', :scope => [:activerecord, :attributes]) %></th>
    <td><%= @event.name %></td>
  </tr>
  <tr>
    <th><%= t('event.organizer', :scope => [:activerecord, :attributes]) %></th>
    <td><%= @event.organizer.name %></td>
  </tr>
  <tr>
    <th><%= t('event.date_on', :scope => [:activerecord, :attributes]) %></th>
    <td><%= @event.date_on.strftime('%Y年%m月%d日') %></td>
  </tr>
  <tr>
    <th><%= t('event.place', :scope => [:activerecord, :attributes]) %></th>
    <td><%= @event.place %></td>
  </tr>
  <tr>
    <th><%= t('event.contents', :scope => [:activerecord, :attributes]) %></th>
    <td><%= @event.contents %></td>
  </tr>
</table>

<br />
<%= link_to t('edit', :scope => [:views, :global]), edit_event_path(@event) %> |
<%= link_to t('back', :scope => [:views, :global]), events_path %> |
<%= link_to t('events.join', :scope => [:views]), join_event_path(@event) %>

<hr />
<h2><%= t('events.members', :scope => [:views]) %></h2>
<table class="members">
  <col class="contents" span="2" />
  <col class="commands" />
  <tr>
    <th><%= t(:name, :scope => [:activerecord, :attributes, :member]) %></th>
    <th><%= t(:twitter_id, :scope => [:activerecord, :attributes, :member]) %></th>
    <th><%= t(:commands, :scope => [:views, :global]) %></th>
  </tr>
  <% @event.entries.each do |entry| %>
  <tr>
    <td><%= entry.member.name %></td>
    <td><%= entry.member.twitter_id %></td>
    <td><%= link_to t('show', :scope => [:views, :global]), member_path(entry.member) %></td>
  </tr>
  <% end %>
</table>

