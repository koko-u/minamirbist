<h1><%= t(:listing_events, :scope => [:view, :title]) %></h1>

<table class="events">
  <col class="contents" span="5" />
  <col class="commands" span="3" />
  <tr>
    <th><%= t('event.name', :scope => [:activerecord, :attributes]) %></th>
    <th><%= t('event.date_on', :scope => [:activerecord, :attributes]) %></th>
    <th><%= t('event.place', :scope => [:activerecord, :attributes]) %></th>
    <th><%= t('event.contents', :scope => [:activerecord, :attributes]) %></th>
    <th><%= t('event.entries.count', :scope => [:activerecord, :attributes]) %></th>
    <th colspan="3"><%= t(:commands, :scope => [:view, :title]) %></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.date_on %></td>
    <td><%= event.place %></td>
    <td><%= event.contents %></td>
    <td align="right"><%= number_with_delimiter(event.entries.count) %></td>
    <td><%= link_to t(:show, :default => 'Show', :scope => [:view, :title]), event %></td>
    <td><%= link_to t(:edit, :default => 'Edit', :scope => [:view, :title]), edit_event_path(event) %></td>
    <td><%= link_to t(:destroy, :default => 'Destroy', :scope => [:view, :title]), event,
                    :confirm => t(:sure?, :default => 'Are you sure?', :scope => [:view, :message]),
                    :method => :delete %></td>
  </tr>
<% end %>
</table>

